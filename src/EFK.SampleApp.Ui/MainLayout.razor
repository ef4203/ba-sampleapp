@using Microsoft.Fast.Components.FluentUI
@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        Sample Application
        <FluentSpacer/>
        <FluentIcon Icon="Icons.Regular.Size24.Person" Width="24px" Color="Color.Lightweight"/>
    </FluentHeader>

    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentNavMenu Width="200">
            <FluentNavLink Href="/" Icon="new Icons.Filled.Size24.Home()">Home</FluentNavLink>
            <FluentNavLink Href="/Data" Icon="new Icons.Filled.Size24.DocumentBulletListCube()">Data</FluentNavLink>
        </FluentNavMenu>
        <FluentBodyContent>
            @Body
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>
